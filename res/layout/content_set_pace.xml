<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SetPace"
    tools:showIn="@layout/activity_set_pace"
    android:focusableInTouchMode="true"
    android:background="@color/standardBackground">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="START"
        android:textColor="@color/standardBackground"
        android:id="@+id/startButton"
        android:background="@color/standardGreen"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/notificationList"
        android:background="@color/standardOrange"
        android:visibility="visible"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:choiceMode="singleChoice"
        android:listSelector="@color/standardGreen"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Set your minimum average pace"
        android:id="@+id/textView2"
        android:inputType="none"
        android:textSize="20dp"
        android:layout_below="@+id/notificationList"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Choose a notification sound"
        android:id="@+id/textView3"
        android:inputType="none"
        android:textSize="20dp"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFFFF" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minutePicker"
        android:layout_marginStart="65dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:textColorPrimary="#FFFFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/minutePicker"
        android:layout_toEndOf="@+id/minutePicker"
        android:layout_marginBottom="72dp"
        android:textSize="30dp"
        android:layout_toRightOf="@+id/minutePicker"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondPicker"
        android:layout_alignTop="@+id/minutePicker"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIN/KM"
        android:id="@+id/textView4"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/secondPicker"
        android:layout_marginStart="21dp"
        android:textColor="#ffffff" />

</RelativeLayout>
